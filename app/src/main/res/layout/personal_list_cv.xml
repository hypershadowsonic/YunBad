<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/hot_list">




    <android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="330dp"
    android:layout_height="120dp"
        android:layout_gravity="center"
        android:id="@+id/cv1"
        android:layout_marginTop="24dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardBackgroundColor="#DDFFDD">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
        <ImageView
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:id="@+id/c1_photo"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="-20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/c1_name"
            android:textSize="30sp"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/c1_status"
            android:textSize="15sp"
            android:layout_marginLeft="140dp"
            android:layout_centerVertical="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/c1_locate"
            android:textSize="15sp"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="68dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/c1_date"
            android:textSize="15sp"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="90dp" />

        <ImageButton
            android:id="@+id/c1_plus"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:scaleType="fitXY"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:background="@null"
            android:layout_marginBottom="0dp" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="維修通知"
                android:id="@+id/switch1"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

</android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="330dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:id="@+id/cv2"
        android:layout_marginTop="12dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardBackgroundColor="#FFE1E1">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:id="@+id/c2_photo"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="-20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/c2_name"
                android:textSize="30sp"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/c2_status"
                android:textSize="15sp"
                android:layout_marginLeft="140dp"
                android:layout_centerVertical="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/c2_locate"
                android:textSize="15sp"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="68dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/c2_date"
                android:textSize="15sp"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="90dp" />

            <ImageButton
                android:id="@+id/c2_plus"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:scaleType="fitXY"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"
                android:background="@null"/>
            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="維修通知"
                android:id="@+id/switch2"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>